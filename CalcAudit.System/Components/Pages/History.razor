@page "/historico"
@using CalcAudit.System.Models
@using CalcAudit.System.Services
@inject ICalculoService CalculoService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Histórico</PageTitle>

<div class="history-container mt-md-5 mt-3">

    <div class="mb-4 d-flex align-items-end justify-content-between px-2">
        <div>
            <h2 class="fw-bold m-0 lh-1"><i class="bi bi-clock-history text-accent"></i> Histórico</h2>
            <small class="text-secondary-custom opacity-75">Registro de auditoria completo</small>
        </div>
        @if (Lista != null && Lista.Any())
        {
            <div class="badge bg-dark border border-secondary text-secondary-custom rounded-pill fw-normal px-3">
                @Lista.Count registros
            </div>
        }
    </div>

    @if (Lista is null)
    {
        <div class="text-center py-5 text-secondary-custom">
            <div class="spinner-border text-accent mb-2" role="status"></div>
            <p>Carregando dados...</p>
        </div>
    }
    else if (!Lista.Any())
    {
        <div class="card card-dark p-5 text-center">
            <div class="opacity-25 mb-3"><i class="bi bi-journal-x fs-1"></i></div>
            <span class="text-secondary-custom fs-5">Nenhum cálculo encontrado.</span>
            <div class="mt-3">
                <a href="/" class="btn btn-outline-light btn-sm rounded-pill px-4">Ir para Calculadora</a>
            </div>
        </div>
    }
    else
    {
        <div class="card card-dark d-none d-md-block">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark-custom table-hover align-middle mb-0">
                        <colgroup>
                            <col style="width: 10%;">
                            <col style="width: 20%;">
                            <col style="width: 60%;">
                            <col style="width: 10%;">
                        </colgroup>
                        <thead>
                            <tr>
                                <th class="ps-4">ID</th>
                                <th>Data</th>
                                <th class="text-end pe-4">Cálculo Realizado</th>
                                <th class="text-center">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Lista.OrderByDescending(x => x.DataCalculo))
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-white opacity-50">#@item.Id</td>
                                    <td>
                                        <div class="fw-bold text-white">@item.DataCalculo.ToString("dd/MM/yyyy")</div>
                                        <div class="small text-secondary-custom">@item.DataCalculo.ToString("HH:mm:ss")</div>
                                    </td>
                                    <td class="text-end pe-4 font-monospace fs-5">
                                        <span class="text-secondary-custom">@FormatNumber(item.ValorA)</span>
                                        <span class="text-accent fw-bold mx-1">@item.Operacao</span>
                                        <span class="text-secondary-custom">@FormatNumber(item.ValorB)</span>
                                        <span class="text-muted mx-2">=</span>
                                        <span class="text-white fw-bold">@item.Resultado.ToString("0.##")</span>
                                    </td>
                                    <td class="text-center">
                                        <button class="btn btn-link text-danger p-2 opacity-75 hover-opacity-100"
                                                @onclick="() => Deletar(item.Id)" title="Excluir">
                                            <i class="bi bi-trash3-fill fs-5"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="d-block d-md-none pb-5">
            @foreach (var item in Lista.OrderByDescending(x => x.DataCalculo))
            {
                <div class="mobile-history-card">

                    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom border-secondary border-opacity-25 pb-2">
                        <div class="d-flex flex-column">
                            <span class="badge bg-secondary bg-opacity-25 text-white border border-secondary border-opacity-25">
                                ID #@item.Id
                            </span>
                        </div>
                        <div class="text-end">
                            <small class="text-secondary-custom" style="font-size: 0.8rem;">
                                @item.DataCalculo.ToString("dd/MM/yy HH:mm")
                            </small>
                        </div>
                    </div>

                    <div class="text-center py-2">
                        <div class="mobile-label">OPERAÇÃO</div>
                        <div class="font-monospace d-flex align-items-center justify-content-center gap-2 flex-wrap">
                            <span class="text-white fs-4">@FormatNumber(item.ValorA)</span>
                            <span class="text-accent fs-4 fw-bold">@item.Operacao</span>
                            <span class="text-white fs-4">@FormatNumber(item.ValorB)</span>
                        </div>
                        <div class="mt-2 pt-2 border-top border-secondary border-opacity-10">
                            <span class="mobile-label d-block mb-1">RESULTADO</span>
                            <span class="text-success fw-bold fs-2">@item.Resultado.ToString("0.##")</span>
                        </div>
                    </div>

                    <div class="mt-3 d-flex justify-content-end">
                        <button class="btn btn-outline-danger btn-sm w-100 d-flex align-items-center justify-content-center gap-2"
                                @onclick="() => Deletar(item.Id)">
                            <i class="bi bi-trash3"></i> Excluir Registro
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<CalculoDto>? Lista;

    protected override async Task OnInitializedAsync()
    {
        await Carregar();
    }

    private async Task Carregar()
    {
        try
        {
            Lista = await CalculoService.ObterHistoricoAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro: {ex.Message}");
        }
    }

    private async Task Deletar(int id)
    {
        try
        {
            // Opcional: Adicionar uma confirmação JS aqui se quiser
            await CalculoService.DeletarCalculoAsync(id);
            await Carregar();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erro ao deletar: {ex.Message}");
        }
    }

    // Helper para formatar nulos ou números
    private string FormatNumber(decimal? valor) => valor.HasValue ? valor.Value.ToString("0.##") : "?";
}