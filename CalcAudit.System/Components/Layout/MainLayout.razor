@inherits LayoutComponentBase

<div class="page">
    <header class="glass-header">
        <div class="header-container">

            <a href="" class="logo-area">
                <img src="https://www.pekus.com.br/img/logo.png"
                     alt="Pekus"
                     class="logo-img" />
            </a>

            <button class="mobile-toggle" @onclick="ToggleMenu">
                <i class="bi @(_isMenuOpen ? "bi-x-lg" : "bi-list")"></i>
            </button>

            <nav class="nav-actions @(_isMenuOpen ? "active" : "")">

                <a href="/" class="nav-link-custom" @onclick="CloseMenu">
                    <i class="bi bi-calculator"></i>
                    <span>Calculadora</span>
                </a>

                <a href="historico" class="nav-link-custom" @onclick="CloseMenu">
                    <i class="bi bi-clock-history"></i>
                    <span>Histórico</span>
                </a>

                <div class="separator d-none d-md-block"></div>

                <a href="https://www.pekus.com.br" target="_blank" class="btn-pekus" @onclick="CloseMenu">
                    Site Pekus <i class="bi bi-arrow-right-short"></i>
                </a>
            </nav>

        </div>
    </header>

    <main>
        @Body
    </main>
</div>

@code {
    private bool _isMenuOpen = false;

    private void ToggleMenu()
    {
        _isMenuOpen = !_isMenuOpen;
    }

    private void CloseMenu()
    {
        _isMenuOpen = false;
    }
}